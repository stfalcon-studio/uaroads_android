<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppThemeOrange" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="toolbarStyle">@style/ToolbarOrangeStyle</item>
    </style>

    <style name="ToolbarOrangeStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
        <item name="android:background">@color/orange</item>
    </style>


    <style name="TitleTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/white70</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabLayoutStyle.TextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="TabLayoutStyle.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white70</item>
    </style>

    <!-- Text -->

    <style name="TextBlack16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBlack14">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBlack30">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextGray22">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextGrayDark14">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextGray14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextGray12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextWhite14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Buttons -->

    <style name="ButtonFullWidth">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
