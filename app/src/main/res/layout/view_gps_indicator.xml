<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvGpsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/indicator_padding"
        android:text="@string/gps_label"
        android:textColor="#000000"
        android:textSize="@dimen/gps_indicator_text_size" />

    <View
        android:id="@+id/viewAccuracyLow"
        android:layout_width="@dimen/indicator_width"
        android:layout_height="@dimen/indicator_height"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/indicator_margin"
        android:layout_toRightOf="@+id/tvGpsLabel"
        android:background="@color/gray" />

    <View
        android:id="@+id/viewAccuracyMedium"
        android:layout_width="@dimen/indicator_width"
        android:layout_height="@dimen/indicator_height"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/indicator_margin"
        android:layout_toRightOf="@+id/viewAccuracyLow"
        android:background="@color/gray" />

    <View
        android:id="@+id/viewAccuracyHigh"
        android:layout_width="@dimen/indicator_width"
        android:layout_height="@dimen/indicator_height"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/indicator_margin"
        android:layout_toRightOf="@+id/viewAccuracyMedium"
        android:background="@color/gray" />

</RelativeLayout>